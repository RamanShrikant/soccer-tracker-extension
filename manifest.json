{
  "manifest_version": 3,
  "name": "Soccer Tracker",
  "version": "0.1.0",

  "action": {
    "default_popup": "frontend/build/index.html",
    "default_title": "Soccer Tracker"
  },

  "permissions": ["storage"],

  "host_permissions": [
    "http://localhost/*",
    "https://*/*",
    "http://*/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https: data: blob:;"
  },
    "icons": {
    "16": "frontend/public/icons/icon16.png",
    "48": "frontend/public/icons/icon48.png",
    "128": "frontend/public/icons/icon128.png"
  }
}
