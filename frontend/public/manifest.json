{
  "manifest_version": 3,
  "name": "Soccer Tracker Extension",
  "version": "1.0",
  "description": "Live soccer scores from top leagues, with AI-powered pre-match and post-match summaries.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": []
}
